{
  "name": "siyuan-plugin-claude-assistant",
  "version": "0.16.0",
  "type": "module",
  "description": "ðŸ¤– Claude AI Assistant plugin for SiYuan Note - Unified Chat & AI Text Editing with streaming responses",
  "repository": {
    "type": "git",
    "url": "https://github.com/Freedragonlancer/Siyuan-Note-ClaudePlugin.git"
  },
  "homepage": "https://github.com/Freedragonlancer/Siyuan-Note-ClaudePlugin#readme",
  "bugs": {
    "url": "https://github.com/Freedragonlancer/Siyuan-Note-ClaudePlugin/issues"
  },
  "keywords": [
    "siyuan-plugin",
    "claude-ai",
    "anthropic",
    "ai-assistant",
    "chatbot",
    "text-editing",
    "markdown",
    "typescript",
    "streaming",
    "note-taking"
  ],
  "author": "Freedragonlancer",
  "license": "MIT",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run unit",
    "test:integration": "vitest run integration",
    "test:coverage": "vitest run --coverage",
    "deploy": "npm run build && npm run copy-plugin",
    "copy-plugin": "cp -v dist/index.js \"N:/Siyuan-Note/data/plugins/siyuan-plugin-claude-assistant/index.js\" && cp -v dist/index.css \"N:/Siyuan-Note/data/plugins/siyuan-plugin-claude-assistant/index.css\" && cp -v plugin.json \"N:/Siyuan-Note/data/plugins/siyuan-plugin-claude-assistant/plugin.json\" && cp -v icon.png \"N:/Siyuan-Note/data/plugins/siyuan-plugin-claude-assistant/icon.png\" && cp -v README.md \"N:/Siyuan-Note/data/plugins/siyuan-plugin-claude-assistant/README.md\" && cp -rv i18n \"N:/Siyuan-Note/data/plugins/siyuan-plugin-claude-assistant/\"",
    "clean-cache": "node scripts/clean-cache.cjs",
    "clean-siyuan-cache": "node scripts/clean-siyuan-cache.cjs",
    "clean-deploy": "node scripts/clean-deploy.cjs",
    "clean-deploy:auto-start": "node scripts/clean-deploy.cjs --auto-start",
    "make-link": "node scripts/make_dev_link.cjs",
    "make-link-win": "node scripts/make_dev_link.cjs",
    "bump-version": "node scripts/bump-version.cjs",
    "release": "node scripts/release.cjs",
    "release:major": "node scripts/release.cjs major",
    "release:minor": "node scripts/release.cjs minor",
    "release:patch": "node scripts/release.cjs patch",
    "version:check": "node -p \"'package.json: ' + require('./package.json').version\" && node -p \"'plugin.json: ' + require('./plugin.json').version\""
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tsconfig/svelte": "^5.0.2",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "fast-glob": "^3.3.2",
    "happy-dom": "^14.12.0",
    "minimist": "^1.2.8",
    "nock": "^13.5.4",
    "sass": "^1.69.5",
    "siyuan": "^1.1.5",
    "svelte": "^4.2.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-static-copy": "^1.0.0",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.66.0",
    "@google/generative-ai": "^0.21.0",
    "@types/diff-match-patch": "^1.0.36",
    "diff-match-patch": "^1.0.5",
    "dompurify": "^3.3.0",
    "highlight.js": "^11.11.1",
    "marked": "^16.4.1",
    "openai": "^4.28.0"
  }
}
